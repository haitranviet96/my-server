{
	dynamic_dns {
		provider cloudflare {env.CLOUDFLARE_API_TOKEN}
		domains {
			haivita.com
		}
	}

	acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

haivita.com {
	respond "Hello, world!"
}

cloud.haivita.com {
	respond "Hello, world!"
}

cockpit.haivita.com {
	basicauth {
		{$caddyfile_auth_user} {$caddyfile_auth_pass}
	}

	reverse_proxy https://host.docker.internal:9090 {
		transport http {
			tls_insecure_skip_verify
		}
	}
}
