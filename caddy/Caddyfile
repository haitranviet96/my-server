{
	dynamic_dns {
		provider cloudflare {env.CLOUDFLARE_API_TOKEN}
		domains {
			haivita.com
		}
	}

	acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

haivita.com {
	respond "Hello, world!"
}

cloud.haivita.com {
	respond "Hello, world!"
}

cockpit.haivita.com {
	reverse_proxy http://host.docker.internal:9090
}
