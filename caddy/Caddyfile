{
	dynamic_dns {
		provider cloudflare {env.CLOUDFLARE_API_TOKEN}
		domains {
			haivita.com
		}
	}
}

haivita.com {
	respond "Hello, world!"

	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
}

*.haivita.com {
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
}

cloud.haivita.com {
	respond "Hello, world!"
}

cockpit.haivita.com {
	reverse_proxy 127.0.0.1:9090
}
